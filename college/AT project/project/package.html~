               function showCuisine() {
               var x = document.getElementById("Cuisine");
               if (x.style.display === "none") {
                    x.style.display = "block";
               } else {
                         x.style.display = "none";
                    }
               }
               function showArts() {
                    var x = document.getElementById("Arts");
                    if (x.style.display === "none") {
                         x.style.display = "block";
                    } else {
                              x.style.display = "none";
                         }
               }

